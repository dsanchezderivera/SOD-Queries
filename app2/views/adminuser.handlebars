<!-- views/home.handlebars -->
{{#if user}}
  <div class="page-header">
    <h1>Single user administration</h1>
  </div>
  	{{#if usertoadmin}}
	<div class="col-sm-offset-1">
	<h3> Administrating user: <b>{{usertoadmin.username}}</b></h3>
	<form class="form" role="save">
		<div class="form-group">
		<p><b>Admin: </b>
		 Yes <input type="radio" name="admin" value="true"{{#if usertoadmin.admin}}checked{{/if}}> 
		 No <input type="radio" name="admin" value="false" {{#unless usertoadmin.admin}}checked{{/unless}}>
		 </p>
		</div>
		<button type="submit" class="btn btn-default">Save</button>
	</form>
	</div>
	{{else}}
	<p>No user</p>
	{{/if}}
    </div>
	
  </div>
  
	{{else}}
  <div class="jumbotron">
    <h1>Smart Open Data</h1>
	<h2>Dashboard</h2>
    <p>Sign in and view your profile!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span> 
        Sign in!
      </a>
    </p>
  </div>
  
{{/if}}