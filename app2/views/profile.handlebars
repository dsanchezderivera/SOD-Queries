<!-- views/home.handlebars -->
{{#if user}}
<div class="page-header">
	<h1>Edit profile</h1>
</div>
<div class="col-sm-offset-1">
	<h3> Username: <b>{{user.username}}</b></h3>
	<form class="form" action="/profile/edit/" method="post">
		<div class="form-group">
			<label class="col-sm-4 control-label">First Name</label>
			<input type="text" class="form-control" name="firstname" value="{{user.firstname}}">
		</div>
		<div class="form-group">
			<label class="col-sm-4 control-label">Last Name</label>
			<input type="text" class="form-control" name="lastname" value="{{user.lastname}}">
		</div>
		<div class="form-group">
			<label class="col-sm-4 control-label">E-mail</label>
			<input type="text" class="form-control" name="email" value="{{user.email}}">
		</div>
		<div class="form-group">
			<label class="col-sm-4 control-label">New Password</label>
			<input type="password" class="form-control" name="newpassword" placeholder="Leave blank to not modify">
		</div>
		<div class="form-group">
			<label class="col-sm-4 control-label">Please, insert current password</label>
			<input type="password" class="form-control" name="currentpassword">
		</div>
		<button type="submit" class="btn btn-default">Save</button>
	</form>
</div>
</div>

</div>

{{else}}
<div class="jumbotron">
	<h1>Smart Open Data</h1>
	<h2>Dashboard</h2>
	<p>Sign in and view your profile!</p>
	<p>
		<a href="/signin" class="btn btn-primary btn-lg" role="button">
			<span class="glyphicon glyphicon-user"></span> 
			Sign in!
		</a>
	</p>
</div>

{{/if}}